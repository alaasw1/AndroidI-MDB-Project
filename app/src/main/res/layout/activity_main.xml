<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/movie_review_background">

    <ImageView
        android:id="@+id/icon_review"
        android:layout_width="320dp"
        android:layout_height="320dp"
        app:srcCompat="@drawable/movie_review"
        android:layout_marginTop="125dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/circle_background"/>

    <Button
        android:id="@+id/btn_sign_in"
        android:layout_width="210dp"
        android:layout_height="70dp"
        android:text="SIGN IN"
        app:layout_constraintTop_toBottomOf="@+id/icon_review"
        app:layout_constraintStart_toStartOf="@+id/icon_review"
        app:layout_constraintEnd_toEndOf="@+id/icon_review"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="210dp"
        android:layout_height="70dp"
        android:text="REGISTER"
        app:layout_constraintTop_toBottomOf="@id/btn_sign_in"
        app:layout_constraintStart_toStartOf="@+id/icon_review"
        app:layout_constraintEnd_toEndOf="@+id/icon_review"
        android:layout_marginTop="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
